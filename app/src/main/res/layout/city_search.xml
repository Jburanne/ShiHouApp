<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/city_search_title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#478FA7">

        <ImageView
            android:id="@+id/city_search_back"
            android:layout_width="70px"
            android:layout_height="70px"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/city_search_box"
        android:layout_width="match_parent"
        android:layout_height="430px"
        android:background="@drawable/city_search"
        android:layout_below="@id/city_search_title">
        <SearchView
            android:id="@+id/city_searchView"
            android:layout_width="500px"
            android:layout_height="100px"
            android:layout_centerInParent="true"
            android:background="#478FA7"
            android:alpha="0.6">
        </SearchView>
        <!--<ImageView-->
            <!--android:id="@+id/city_searchBtn"-->
            <!--android:layout_width="100px"-->
            <!--android:layout_height="100px"-->
            <!--android:src="@drawable/city_search_img"-->
            <!--android:layout_toRightOf="@id/city_searchView"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:background="#ffffff"-->
            <!--android:alpha="0.9"/>-->
        <ListView
            android:id="@+id/city_searchLv"
            android:layout_width="500px"
            android:layout_height="600px"
            android:layout_below="@id/city_searchView"
            android:layout_centerHorizontal="true"
            android:background="#000000"
            android:divider="#ffffff"
            android:dividerHeight="2dp"
            android:orientation="horizontal"
            android:alpha="0.5"
            android:visibility="gone"></ListView>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/city_search_seperator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_search_box"
        android:layout_marginTop="15px">
       <View
           android:layout_marginTop="20px"
           android:layout_width="250px"
           android:layout_height="2dip"
           android:background="#FF909090"
           android:layout_marginLeft="20px"
           android:alpha="0.8"></View>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门城市"
            android:textColor="#FF909090"
            android:layout_centerInParent="true"/>
        <View
            android:layout_marginTop="20px"
            android:layout_width="250px"
            android:layout_height="2dip"
            android:background="#FF909090"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:alpha="0.8"></View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="650px"
        android:layout_height="500px"
        android:layout_below="@id/city_search_seperator"
        android:layout_centerHorizontal="true">
        <Button
            android:id="@+id/beijing_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="北京"
            android:textSize="20sp"
            android:layout_marginTop="25dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/shanghai_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="上海"
            android:textSize="20sp"
            android:layout_marginTop="25dip"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/guangzhou_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="广州"
            android:textSize="20sp"
            android:layout_marginTop="25dip"
            android:layout_marginRight="5dip"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/shenzhen_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="深圳"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/nanjing_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="南京"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />
        <Button
            android:id="@+id/wuhan_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="武汉"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dip"
            android:layout_centerVertical="true"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />
        <Button
            android:id="@+id/suzhou_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="苏州"
            android:textSize="20sp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dip"
            android:layout_marginLeft="5dip"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/chongqing_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="重庆"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dip"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/shangrao_btn"
            android:layout_width="150px"
            android:layout_height="100px"
            android:text="上饶"
            android:textSize="20sp"
            android:layout_marginRight="5dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dip"
            android:background="@drawable/button_box"
            android:alpha="0.6"
            android:textColor="@android:color/black"
            />



    </RelativeLayout>

</RelativeLayout>
